<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrbug.enucuznerede.Share"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:columnCount="3"

        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowSpan="1"
            android:text="Başlık giriniz"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lblTitleError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="               "

            android:textSize="25dp" />

        <EditText
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowSpan="1"
            android:hint="başlık"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="130dp"
            android:textSize="30dp" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="İlk fiyat giriniz"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lblPriceError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"

            android:layout_rowSpan="1"
            android:text=""
            android:textSize="25dp" />

        <EditText
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:hint="ilk fiyat"
            android:inputType="number"
            android:textSize="30dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="İndirimli Fiyat"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lblDiscountedError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"

            android:layout_rowSpan="1"
            android:text=""
            android:textSize="25dp" />

        <EditText
            android:id="@+id/txtDiscounted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:hint="ilk fiyat"
            android:inputType="number"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/spnCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"

            />

        <Button
            android:id="@+id/btnLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:onClick="CheckLocation"
            android:text="Konum Bul"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnSendShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:onClick="sendShareClick"
            android:text="Paylaş"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/lblLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text=""
            android:textColor="@color/colorRedCrimson"
            android:textSize="10dp" />
    </GridLayout>


</android.support.constraint.ConstraintLayout>
